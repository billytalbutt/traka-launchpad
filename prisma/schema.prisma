generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(cuid())
  name           String?
  email          String    @unique
  emailVerified  DateTime?
  hashedPassword String?
  image          String?
  role           String    @default("APP_SUPPORT") // ADMIN | APP_SUPPORT | EU_TECH_SUPPORT | UK_TECH_SUPPORT
  isActive       Boolean   @default(true)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  favorites     Favorite[]
  toolLaunches  ToolLaunch[]
  announcements Announcement[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Tool {
  id          String   @id @default(cuid())
  name        String
  description String
  iconName    String   @default("wrench") // Lucide icon name
  launchUrl   String?
  launchType  String   @default("WEB") // WEB | DESKTOP | PROTOCOL
  category    String   @default("General")
  version     String?
  isActive    Boolean  @default(true)
  sortOrder   Int      @default(0)
  color        String?  // Optional accent color for the card
  allowedRoles String?  // Comma-separated roles that can access this tool (empty = all roles)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  favorites    Favorite[]
  toolLaunches ToolLaunch[]
}

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  toolId    String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  tool Tool @relation(fields: [toolId], references: [id], onDelete: Cascade)

  @@unique([userId, toolId])
}

model ToolLaunch {
  id         String   @id @default(cuid())
  userId     String
  toolId     String
  launchedAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  tool Tool @relation(fields: [toolId], references: [id], onDelete: Cascade)
}

model Announcement {
  id        String    @id @default(cuid())
  title     String
  content   String
  type      String    @default("INFO") // INFO | WARNING | UPDATE | NEW
  isActive  Boolean   @default(true)
  createdBy String
  expiresAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  author User @relation(fields: [createdBy], references: [id])
}
